<Window x:Class="Flashcards.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flashcards"
        xmlns:viewModel="clr-namespace:Flashcards.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="Echelon: Your Flashcards App"
        Height="450"
        Width="800"
        MinHeight="450"
        MinWidth="800">

    <Window.DataContext>
        <viewModel:WindowViewModel />
    </Window.DataContext>

    <Border>
        <ContentControl Content="{Binding CurrentView}" />
        <Border.Background>
            <LinearGradientBrush StartPoint="0 0"
                                 EndPoint="0 1">
                <GradientStop Color="#0A0068"
                              Offset="0.0" />
                <GradientStop Color="#7A00B2"
                              Offset="1.0" />
            </LinearGradientBrush>
        </Border.Background>
    </Border>
</Window>